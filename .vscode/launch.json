{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "bot",
            "cargo": {
                "args": [
                    "build",
                    "--bin=myhealth",
                    "--package=myhealth"
                ]
            },
            "args": [
                "bot",
                "-t",
                "{TOKEN}",
                "-u",
                "{USER_ID}"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "DEBUG",
            },
        }
    ]
}